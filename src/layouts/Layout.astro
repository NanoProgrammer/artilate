---
import "../styles/global.css";

type Props = {
  title?: string;
  description?: string;
  image?: string;
  locale?: string;
  siteName?: string;
};
const {
  title = "Artilate â€” Luxury Artisan Chocolates",
  description = "Small-batch, ethically sourced chocolates blending Colombian soul and Alberta craftsmanship.",
  image = "/assets/og.png",
  locale = "en_CA",
  siteName = "Artilate",
} = Astro.props as Props;

const site = Astro.site ?? new URL(`${Astro.url.protocol}//${Astro.url.host}`);
const canonicalUrl = new URL(Astro.url.pathname + Astro.url.search, site);

const orgJsonLd = {
  "@context":"https://schema.org",
  "@type":"Organization",
  name: siteName,
  url: site.href,
  logo: new URL("/assets/logo-completo.png", site).href,
  sameAs: ["https://instagram.com/artilate","https://facebook.com/artilate"]
};
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl.href} />
    <link rel="icon" type="image/svg+xml" href="/assets/favicon.svg" />
    <meta property="og:locale" content={locale} />
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl.href} />
    <meta property="og:image" content={new URL(image, site).href} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#111416" />
    <script type="application/ld+json">{JSON.stringify(orgJsonLd)}</script>
    <slot name="head" />
    <style>
      /* fondo luxury con foil sutil global */
      body::before{
        content:"";position:fixed;inset:-20% -10% -10% -20%;z-index:-1;
        background:
          radial-gradient(60% 40% at 70% 60%, rgba(212,163,115,.12), transparent 60%),
          linear-gradient(120deg, rgba(212,163,115,.10), rgba(255,255,255,.0) 40%, rgba(212,163,115,.10) 70%, rgba(255,255,255,.0));
        mix-blend-mode:screen;opacity:.6;pointer-events:none;
      }
    </style>
  </head>
  <body>
    <a href="#main" class="sr-only focus:not-sr-only">Skip to content</a>
    <slot />
  </body>
</html>
