  <script is:inline>
    // Enhanced Horizontal Carousel
    function enhancedHCarousel() {
      return {
        currentSlide: 0,
        totalSlides: 0,
        perView: 3,
        trackStyle: "",
        slides: [],
        autoplayInterval: null,
        
        init() {
          const track = this.$refs.track;
          const totalItems = track.children.length;
          
          this.updatePerView();
          this.totalSlides = Math.max(1, totalItems - this.perView + 1);
          this.slides = Array.from({ length: this.totalSlides }, (_, i) => i);
          this.updateTrackStyle();
          this.startAutoplay();
          
          // Handle resize
          window.addEventListener('resize', () => {
            this.updatePerView();
            this.totalSlides = Math.max(1, totalItems - this.perView + 1);
            this.slides = Array.from({ length: this.totalSlides }, (_, i) => i);
            if (this.currentSlide >= this.totalSlides) {
              this.currentSlide = 0;
            }
            this.updateTrackStyle();
          });
          
          // Pause on hover
          this.$el.addEventListener('mouseenter', () => this.stopAutoplay());
          this.$el.addEventListener('mouseleave', () => this.startAutoplay());
        },
        
        updatePerView() {
          if (window.matchMedia("(min-width: 1280px)").matches) {
            this.perView = 3;
          } else if (window.matchMedia("(min-width: 768px)").matches) {
            this.perView = 2;
          } else {
            this.perView = 1;
          }
        },
        
        updateTrackStyle() {
          const cardWidth = 100 / this.perView;
          this.trackStyle = `transform: translateX(-${this.currentSlide * cardWidth}%)`;
        },
        
        goToSlide(index) {
          this.currentSlide = index;
          this.updateTrackStyle();
        },
        
        next() {
          this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
          this.updateTrackStyle();
        },
        
        startAutoplay() {
          this.stopAutoplay();
          this.autoplayInterval = setInterval(() => {
            this.next();
          }, 3100);
        },
        
        stopAutoplay() {
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
            this.autoplayInterval = null;
          }
        }
      }
    }

    // Enhanced Vertical Carousel
    function enhancedVCarousel() {
      return {
        currentIndex: 0,
        containerStyle: "",
        itemHeight: 0,
        
        init() {
          const container = this.$refs.container;
          const items = container.children;
          
          // Calculate item height including margin
          setTimeout(() => {
            if (items.length > 0) {
              const firstItem = items[0];
              const style = window.getComputedStyle(firstItem);
              const marginBottom = parseFloat(style.marginBottom);
              this.itemHeight = firstItem.offsetHeight + marginBottom;
            }
          }, 100);
          
          // Start autoplay
          setInterval(() => {
            this.currentIndex = (this.currentIndex + 1) % items.length;
            this.containerStyle = `transform: translateY(-${this.currentIndex * this.itemHeight}px)`;
          }, 2100);
        }
      }
    }

