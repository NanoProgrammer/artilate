---
import Layout from '../../layouts/Layout.astro'
export const prerender = true;

const seoData = {
  title: 'Contact Artilate — Handcrafted Chocolates in Alberta',
  description:
    'Questions about bonbons, local delivery in Calgary/Airdrie/Edmonton, or custom/corporate orders? Contact Artilate—handcrafted chocolates made in Alberta.',
  breadcrumbs: [
    { href: '/', name: 'Home' },
    { href: '/contact', name: 'Contact' }
  ],
  schemaExtras: { '@type': ['ContactPage', 'LocalBusiness'] }
}
---

<Layout {...seoData}>
  <div class="relative min-h-screen bg-neutral-900 overflow-hidden">
    <!-- BG -->
    <div class="absolute inset-0 opacity-5 pointer-events-none select-none">
      <div class="absolute -top-10 -left-10 w-96 h-96 bg-violet-800 rounded-full blur-3xl"></div>
      <div class="absolute top-1/3 right-1/4 w-[28rem] h-[28rem] bg-emerald-700 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-0 w-[32rem] h-[32rem] bg-amber-600 rounded-full blur-3xl"></div>
    </div>

    <!-- Hero -->
    <section class="relative pt-24 pb-10 px-6 text-center">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-5xl md:text-7xl font-bold bg-gradient-to-br from-stone-50 via-amber-100 to-amber-500 bg-clip-text text-transparent tracking-tight">
          Let’s talk chocolate
        </h1>
        <p class="mt-4 text-lg md:text-xl text-stone-300">
          Ready for custom boxes, corporate gifts or local delivery in Alberta? Send us a note — we reply within 24h (Mon–Fri).
        </p>
      </div>
    </section>

    <!-- Grid -->
    <section class="relative pb-24 px-6">
      <div class="mx-auto max-w-7xl grid lg:grid-cols-3 gap-6">
        <!-- FORM (Netlify) -->
        <div class="lg:col-span-2">
          <div class="rounded-3xl border border-neutral-800 bg-neutral-900/60 backdrop-blur-sm p-6 md:p-8">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 rounded-xl bg-amber-600/20 border border-amber-600/40 flex items-center justify-center">
                <svg class="w-5 h-5 text-amber-300" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path d="M2 5a2 2 0 012-2h12a2 2 0 012 2v1l-8 5-8-5V5z"/><path d="M18 8l-8 5-8-5v7a2 2 0 002 2h12a2 2 0 002-2V8z"/></svg>
              </div>
              <h2 class="text-xl md:text-2xl font-semibold text-stone-50">Start your project</h2>
            </div>

            <form
              name="Artilate Contact"
              method="POST"
              action="/thank-you"
              data-netlify="true"
              netlify-honeypot="bot-field"
              class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <!-- hidden -->
              <input type="hidden" name="form-name" value="Artilate Contact" />
              <input type="hidden" name="subject" value="New contact — artilate.ca" />
              <input type="hidden" name="page" value="/contact" />

              <p class="hidden">
                <label>Don’t fill this out: <input name="bot-field" /></label>
              </p>

              <div>
                <label for="name" class="block text-sm text-stone-300 mb-1">Full name*</label>
                <input id="name" name="name" required
                  class="w-full rounded-xl bg-neutral-900 border border-neutral-800 px-4 py-3 text-stone-100 placeholder-stone-500 focus:outline-none focus:border-amber-600 focus:ring-2 focus:ring-amber-600/40"
                  placeholder="Jane Doe" />
              </div>

              <div>
                <label for="email" class="block text-sm text-stone-300 mb-1">Email*</label>
                <input id="email" name="email" type="email" required
                  class="w-full rounded-xl bg-neutral-900 border border-neutral-800 px-4 py-3 text-stone-100 placeholder-stone-500 focus:outline-none focus:border-amber-600 focus:ring-2 focus:ring-amber-600/40"
                  placeholder="you@example.com" />
              </div>

              <div>
                <label for="phone" class="block text-sm text-stone-300 mb-1">Phone (optional)</label>
                <input id="phone" name="phone" type="tel"
                  class="w-full rounded-xl bg-neutral-900 border border-neutral-800 px-4 py-3 text-stone-100 placeholder-stone-500 focus:outline-none focus:border-amber-600 focus:ring-2 focus:ring-amber-600/40"
                  placeholder="+1 403 …" />
              </div>

              <div>
                <label for="city" class="block text-sm text-stone-300 mb-1">City</label>
                <input id="city" name="city"
                  class="w-full rounded-xl bg-neutral-900 border border-neutral-800 px-4 py-3 text-stone-100 placeholder-stone-500 focus:outline-none focus:border-amber-600 focus:ring-2 focus:ring-amber-600/40"
                  placeholder="Calgary, Airdrie, Edmonton…" />
              </div>

              <div class="md:col-span-2">
                <label class="block text-sm text-stone-300 mb-1">I’m interested in</label>
                <div class="grid sm:grid-cols-3 gap-2">
                  <label class="inline-flex items-center gap-2 text-stone-300">
                    <input type="checkbox" name="interest" value="Bonbons" class="accent-amber-600" /> Bonbons / Seasonal boxes
                  </label>
                  <label class="inline-flex items-center gap-2 text-stone-300">
                    <input type="checkbox" name="interest" value="Corporate" class="accent-amber-600" /> Corporate gifts
                  </label>
                  <label class="inline-flex items-center gap-2 text-stone-300">
                    <input type="checkbox" name="interest" value="Custom" class="accent-amber-600" /> Custom flavours/designs
                  </label>
                </div>
              </div>

              <div>
                <label for="budget" class="block text-sm text-stone-300 mb-1">Approx. budget</label>
                <select id="budget" name="budget"
                  class="w-full rounded-xl bg-neutral-900 border border-neutral-800 px-4 py-3 text-stone-100 focus:outline-none focus:border-amber-600 focus:ring-2 focus:ring-amber-600/40">
                  <option value="">Select…</option>
                  <option>Under $150</option>
                  <option>$150–$500</option>
                  <option>$500–$1,500</option>
                  <option>$1,500+</option>
                </select>
              </div>

              <div>
                <label for="timeline" class="block text-sm text-stone-300 mb-1">Timeline</label>
                <select id="timeline" name="timeline"
                  class="w-full rounded-xl bg-neutral-900 border border-neutral-800 px-4 py-3 text-stone-100 focus:outline-none focus:border-amber-600 focus:ring-2 focus:ring-amber-600/40">
                  <option value="">Select…</option>
                  <option>ASAP</option>
                  <option>Within 2 weeks</option>
                  <option>Within a month</option>
                  <option>Flexible</option>
                </select>
              </div>

              <div class="md:col-span-2">
                <label for="message" class="block text-sm text-stone-300 mb-1">Message*</label>
                <textarea id="message" name="message" required rows="6"
                  class="w-full rounded-xl bg-neutral-900 border border-neutral-800 px-4 py-3 text-stone-100 placeholder-stone-500 focus:outline-none focus:border-amber-600 focus:ring-2 focus:ring-amber-600/40"
                  placeholder="Tell us about quantities, flavours, date, delivery/pickup…"></textarea>
              </div>

              <!-- consent -->
              <div class="md:col-span-2 flex items-start gap-3">
                <input id="consent" name="consent" type="checkbox" required class="mt-1 accent-amber-600" />
                <label for="consent" class="text-sm text-stone-300">
                  I agree to be contacted by Artilate about my request. See our
                  <a href="/terms-of-sale" class="underline decoration-amber-500 hover:text-amber-400">Terms of Sale</a>.
                </label>
              </div>

              <!-- reCAPTCHA (Netlify) -->
              <div class="md:col-span-2">
                <div data-netlify-recaptcha="true"></div>
              </div>

              <!-- submit -->
              <div class="md:col-span-2 mt-2">
                <button type="submit"
                  class="w-full md:w-auto inline-flex items-center justify-center rounded-full px-8 py-3 font-medium text-white bg-gradient-to-r from-amber-500 to-amber-600 hover:from-amber-600 hover:to-amber-700 transition-all duration-300 shadow-lg shadow-amber-600/20">
                  Send message
                </button>
                <div class="mt-3 flex flex-wrap items-center gap-4 text-sm text-stone-400">
                  <span class="inline-flex items-center gap-1">
                    <span class="w-1.5 h-1.5 bg-emerald-500 rounded-full"></span> 24h response time
                  </span>
                  <span class="inline-flex items-center gap-1">
                    <span class="w-1.5 h-1.5 bg-violet-500 rounded-full"></span> Free consultation
                  </span>
                  <span class="inline-flex items-center gap-1">
                    <span class="w-1.5 h-1.5 bg-amber-500 rounded-full"></span> No obligation
                  </span>
                </div>
              </div>
            </form>
          </div>
        </div>

        <!-- SIDE CARDS -->
        <div class="space-y-6">
          <!-- direct contact -->
          <div class="rounded-3xl border border-neutral-800 bg-neutral-900/60 backdrop-blur-sm p-6">
            <h3 class="text-lg font-semibold text-stone-50 mb-4">Get in touch directly</h3>
            <div class="space-y-4 text-stone-300">
              <div class="flex items-center gap-3">
                <div class="w-9 h-9 rounded-xl bg-neutral-800 border border-neutral-700 flex items-center justify-center">
                  <svg class="w-5 h-5 text-stone-300" viewBox="0 0 20 20" fill="currentColor"><path d="M2 5a2 2 0 012-2h12a2 2 0 012 2v1l-8 5-8-5V5z"/><path d="M18 8l-8 5-8-5v7a2 2 0 002 2h12a2 2 0 002-2V8z"/></svg>
                </div>
                <a
                  href="https://mail.google.com/mail/?view=cm&fs=1&to=admin@artilate.com"
                  target="_blank" rel="noopener"
                  class="underline decoration-amber-500 hover:text-amber-400">
                  admin@artilate.com
                </a>
              </div>

              <div class="flex items-center gap-3">
                <div class="w-9 h-9 rounded-xl bg-neutral-800 border border-neutral-700 flex items-center justify-center">
                  <svg class="w-5 h-5 text-stone-300" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2C8.13 2 5 5.02 5 8.75 5 13.78 12 22 12 22s7-8.22 7-13.25C19 5.02 15.87 2 12 2zm0 9.75a3 3 0 110-6 3 3 0 010 6z"/></svg>
                </div>
                <p>Serving Alberta — Calgary, Airdrie, Edmonton</p>
              </div>
            </div>
          </div>

          <!-- business hours -->
          <div class="rounded-3xl border border-neutral-800 bg-neutral-900/60 backdrop-blur-sm p-6">
            <h3 class="text-lg font-semibold text-stone-50 mb-4">Business Hours</h3>
            <ul class="text-stone-300 space-y-2">
              <li class="flex justify-between"><span>Mon–Fri</span><span>10:00 AM – 6:00 PM MT</span></li>
              <li class="flex justify-between"><span>Saturday</span><span>10:00 AM – 4:00 PM MT</span></li>
              <li class="flex justify-between"><span>Sunday</span><span>Closed</span></li>
            </ul>
            <p class="mt-4 text-sm text-stone-400">Emergency support for existing orders: email with <strong>ORDER #</strong> in the subject.</p>
          </div>

          <!-- quick questions -->
          <div class="rounded-3xl border border-neutral-800 bg-neutral-900/60 backdrop-blur-sm p-6">
            <h3 class="text-lg font-semibold text-stone-50 mb-4">Quick Questions</h3>
            <div class="divide-y divide-neutral-800">
              <details class="py-3">
                <summary class="cursor-pointer text-stone-200">Do you deliver locally?</summary>
                <p class="mt-2 text-stone-400">Yes — Calgary, Airdrie, Edmonton and nearby areas. See options at checkout.</p>
              </details>
              <details class="py-3">
                <summary class="cursor-pointer text-stone-200">Any allergens?</summary>
                <p class="mt-2 text-stone-400">Our kitchen handles milk, soy, nuts, gluten, eggs, sesame and sulphites. Check each label.</p>
              </details>
              <details class="py-3">
                <summary class="cursor-pointer text-stone-200">Custom or corporate orders?</summary>
                <p class="mt-2 text-stone-400">We craft branded assortments and custom flavours. Use the form and tell us your date & quantities.</p>
              </details>
              <div class="pt-3">
                <a href="/faq" class="text-amber-300 underline decoration-amber-500 hover:text-amber-400">View full FAQ →</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

</Layout>
