import LayoutProducts from "../../layouts/LayoutProducts.astro";
---
<LayoutProducts  title="Flavored Handmade Chocolates | Discover Unique Artilate Flavours"
description="Explore Artilateâ€™s signature handmade chocolate flavours, crafted with unique infusions like ginger, coffee, citrus and sea salt. Ethically sourced, made in Alberta."
keywords="flavored chocolate, handmade chocolates, artisan truffles, ginger chocolate, citrus chocolate, coffee chocolate, infused chocolate, unique chocolate flavours, Alberta chocolate, Artilate chocolates">
<section class="py-16 px-4 max-w-7xl mx-auto mt-16">
  <h1 class="text-4xl font-extrabold text-center text-[var(--color-3)] mb-14">Explore Our Flavours</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-y-12 gap-x-6">
    {flavours.map((flavour, index) => {
      const delay = `${index * 0.1}s`;
      return (
        <div
          class="pt-8 border-t border-dotted border-[var(--color-4)] fade-in"
          style={`animation-delay: ${delay};`}
        >
          <img
            src={flavour.image}
            alt={flavour.title}
            class="w-full h-48 object-cover rounded-xl shadow-sm mb-4"
            loading="lazy"
          />
          <h2 class="text-xl font-bold text-[var(--color-3)] mb-2">{flavour.title}</h2>
          <p class="text-sm text-[var(--color-5)]">{flavour.description}</p>
        </div>
      );
    })}
  </div>
</section>
</LayoutProducts>

<style>
  .fade-in {
    opacity: 0;
    transform: translateY(10px);
    animation: fadeIn 0.4s ease-out forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  img {
    transition: transform 0.3s ease-in-out;
  }

  img:hover {
    transform: scale(1.03);
  }
</style>
