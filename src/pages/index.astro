---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import SectionWho from "../components/SectionWho.astro";
import SectionWhat from "../components/SectionWhat.astro";
import SectionEthics from "../components/SectionEthics.astro";
import SectionSell from "../components/SectionSell.astro";
import SectionContact from "../components/SectionContact.astro";

const title = "Artilate — Premium Artisan Chocolates";
const description =
  "Artisan chocolates crafted in Alberta with tropical Colombian soul. Gourmet flavours, ethical sourcing, and small-batch quality.";
const image = "/assets/og.png"; // ruta a tu imagen OG
const locale = "en_CA";
const siteName = "Artilate";
---

<Layout
  title={title}
  description={description}
  image={image}
  locale={locale}
 
>


  
  <Hero
  title="From Bean to Bonbon — Crafted with Passion"
  subtitle="Our chocolates blend tropical Colombian cacao with Alberta craftsmanship, in small batches for unmatched quality."
  primaryCtaLabel="Shop Now"
  primaryCtaHref="#sell"
  secondaryCtaLabel="Our Story"
  secondaryCtaHref="#who"
  imageMainSrc="/assets/product-main.jpeg"
  imageMainAlt="Box of glossy artisan bonbons"
  mediaSide="right"
  badges={["Small-batch", "Ethically sourced", "Made in Alberta"]}
/>

    <SectionWho
  imageSrc="/assets/process-tempering.avif"
  imageAlt="Tempering dark chocolate on marble"
  reverse={false}
/>

    <SectionWhat
  imageSrc="/assets/what-we-do-bonbons.jpeg"
  imageAlt="Handmaking chocolate bonbons"
  reverse={true}
/>

    <SectionEthics />
  <SectionSell
  products={[
    {
      image: "/assets/bonbon-maracuya.jpeg",
      alt: "Passion fruit bonbon",
      title: "Bonbon — Maracuyá",
      blurb: "Tangy ganache inside glossy dark chocolate.",
      href: "/product/bonbon-maracuya",
      price: "$16.50",
      tag: "Bestseller",
    },
    {
      image: "/assets/bar-espresso.jpeg",
      alt: "dark bar",
      title: "Bar with dried fruits",
      blurb: "Deep cacao with dried fruits.",
      href: "/product/bar-espresso",
      price: "$9",
      tag: "New",
    },
    {
      image: "/assets/bonbon-pistachio.jpeg",
      alt: "Pistachio bonbon",
      title: "Bonbon — Pistachio",
      blurb: "Silky pistachio ganache, dark couverture.",
      href: "/product/bonbon-pistachio",
      price: "$3.50",
    },
  ]}
/>

    <SectionContact />

  

</Layout>
