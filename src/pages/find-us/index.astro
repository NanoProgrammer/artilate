---
import Layout from '../../layouts/Layout.astro'
export const prerender = true;
const locations = [
  {
    id: 'calgary',
    name: 'Crossroads Farmers Market',
    address: '1000 Crossroads St, Calgary, AB T2N 1N4',
    city: 'Calgary',
    hours: 'Fri–Sun · 9:00 AM – 5:00 PM',
    phone: '+1-403-XXX-XXXX',
    description:
      'Visit our Crossroads Farmers Market to experience a full selection of handcrafted chocolates and seasonal specialties.',
    mapUrl: 'https://maps.google.com?q=Crossroads+Farmers+Market+Calgary'
  },
  {
    id: 'airdrie',
    name: 'Artilate Boutique',
    address: '910 Cobblemore Cmn SW, Airdrie, AB T4B 0C9',
    city: 'Airdrie',
    hours: 'Mon–Fri 10:00 AM – 6:00 PM · Sat 10:00 AM – 4:00 PM',
    phone: '+1-403-XXX-XXXX',
    description:
      'Our flagship boutique where you can explore our complete collection and watch chocolatiers at work.',
    mapUrl: 'https://maps.google.com?q=910+Cobblemore+Cmn+SW,+Airdrie,+AB'
  }
]
---

<Layout
  title="Find Us | Artilate — Handcrafted Chocolates"
  description="Visit our locations in Calgary and Airdrie. Experience premium handcrafted chocolates in Alberta."
>
  <main class="error-page">
    <div class="container">
      <div class="error-content">
        <div class="chocolate-crack" aria-hidden="true">
          <svg viewBox="0 0 800 200" class="crack-svg">
            <path class="crack-line" d="M50,100 Q200,80 300,100 T500,120 Q600,110 750,100" stroke="url(#crackGradient)" stroke-width="3" fill="none"/>
            <path class="crack-line secondary" d="M100,90 Q250,105 400,95 T650,85" stroke="url(#crackGradient)" stroke-width="2" fill="none"/>
            <path class="crack-line tertiary" d="M200,110 Q350,125 500,115 T700,105" stroke="url(#crackGradient)" stroke-width="1.5" fill="none"/>
            <defs>
              <linearGradient id="crackGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                <stop offset="0%" style="stop-color:#D4A373;stop-opacity:0"/>
                <stop offset="20%" style="stop-color:#D4A373;stop-opacity:.8"/>
                <stop offset="50%" style="stop-color:#F59E0B;stop-opacity:1"/>
                <stop offset="80%" style="stop-color:#D4A373;stop-opacity:.8"/>
                <stop offset="100%" style="stop-color:#D4A373;stop-opacity:0"/>
              </linearGradient>
            </defs>
          </svg>
        </div>

        <h1 class="error-title">Find Us</h1>
        <p class="error-description">Experience the art of handcrafted chocolate at our Alberta locations.</p>

        <!-- Cards grid -->
        <section class="grid">
          {locations.map((loc) => (
            <article class="place-card">
              <div class="place-hero" aria-hidden="true">
                <div class="badge">{loc.city}</div>
              </div>
              <div class="place-body">
                <h2 class="place-title">{loc.name}</h2>
                <div class="meta">
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                    <path d="M21 10c0 6-9 13-9 13S3 16 3 10a9 9 0 1 1 18 0z"/><circle cx="12" cy="10" r="3"/>
                  </svg>
                  <span>{loc.address}</span>
                </div>
                <p class="desc">{loc.description}</p>

                <div class="info">
                  <div class="info-box">
                    <div class="info-head">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                        <circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/>
                      </svg>
                      <span>Hours</span>
                    </div>
                    <div class="info-text">{loc.hours}</div>
                  </div>
                  <div class="info-box">
                    <div class="info-head">
                      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                        <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.77 19.77 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.77 19.77 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.66 12.66 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.66 12.66 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                      </svg>
                      <span>Contact</span>
                    </div>
                    <a class="info-link" href={`tel:${loc.phone}`}>{loc.phone}</a>
                  </div>
                </div>

                <div class="actions">
                  <a href={loc.mapUrl} target="_blank" rel="noopener" class="primary-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                      <path d="M21 10c0 6-9 13-9 13S3 16 3 10a9 9 0 1 1 18 0z"/><circle cx="12" cy="10" r="3"/>
                    </svg>
                    Get Directions
                  </a>
                  <a href={`tel:${loc.phone}`} class="secondary-btn">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.77 19.77 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.77 19.77 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.66 12.66 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.66 12.66 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                    </svg>
                    Call Us
                  </a>
                </div>
              </div>
            </article>
          ))}
        </section>

        <!-- Map teaser -->
        <section class="map">
          <div class="map-inner">
            <svg width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/>
            </svg>
            <h3>Interactive Map</h3>
            <p>Full map integration coming soon.</p>
            <div class="map-tags">
              {locations.map((loc) => (
                <a href={loc.mapUrl} target="_blank" rel="noopener" class="tag">{loc.city}</a>
              ))}
            </div>
          </div>
        </section>

        <div class="error-actions">
          <a href="/shop" class="primary-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/><line x1="3" y1="6" x2="21" y2="6"/><path d="M16 10a4 4 0 0 1-8 0"/>
            </svg>
            Shop Chocolates
          </a>
          <a
  href="https://mail.google.com/mail/?view=cm&fs=1&to=admin@artilate.com&su=Directions%20or%20store%20question"
  class="secondary-btn"
  target="_blank"
  rel="noopener"
>
  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
    <path d="M4 4h16v12H5.17L4 17.17V4z"/>
    <line x1="22" y1="20" x2="2" y2="20"/>
  </svg>
  Email Us
</a>

        </div>

        <div class="chocolate-particles" aria-hidden="true">
          <div class="particle particle-1"></div><div class="particle particle-2"></div>
          <div class="particle particle-3"></div><div class="particle particle-4"></div>
          <div class="particle particle-5"></div><div class="particle particle-6"></div>
        </div>
      </div>
    </div>
  </main>

  <style>
    :root{ --cacao:#0A0B0D; --ivory:#FAFAF9; --gold:#D4A373; --amber:#F59E0B; --muted:rgba(250,250,249,.8); }
    body{ background:var(--cacao); color:var(--ivory); line-height:1.6; overflow-x:hidden; }
    .container{ max-width:1280px; margin:0 auto; padding:0 2rem; }

    .error-page{ min-height:calc(90vh); display:flex; align-items:center; justify-content:center; position:relative; padding-bottom:32px; text-align:center;
      background:radial-gradient(ellipse at 30% 20%, rgba(91,33,182,.08) 0%, transparent 50%),
                 radial-gradient(ellipse at 70% 80%, rgba(245,158,11,.06) 0%, transparent 50%); }
    .error-content{ position:relative; z-index:2; max-width:1080px; margin:0 auto; }

    .chocolate-crack{ margin-bottom:1rem; opacity:0; animation:crackAppear 1s ease-out .5s forwards; }
    .crack-svg{ width:100%; max-width:600px; height:120px; }
    .crack-line{ stroke-dasharray:1000; stroke-dashoffset:1000; animation:drawCrack 2s ease-out .8s forwards; }
    .crack-line.secondary{ animation-delay:.7s; opacity:.7 } .crack-line.tertiary{ animation-delay:.4s; opacity:.4 }
    @keyframes crackAppear{ to{ opacity:1 } } @keyframes drawCrack{ to{ stroke-dashoffset:0 } }

    .error-title{ font-family:'Playfair Display',serif; font-size:clamp(2rem,5vw,3.5rem); font-weight:600; margin-bottom:.75rem; text-shadow:0 4px 20px rgba(212,163,115,.3); opacity:0; transform:translateY(20px); animation:slideUp .8s ease-out 1.1s forwards; }
    .error-description{ font-size:1.125rem; color:var(--muted); max-width:720px; margin:0 auto 1.75rem; line-height:1.7; opacity:0; transform:translateY(20px); animation:slideUp .8s ease-out 1.4s forwards; }
    @keyframes slideUp{ to{ opacity:1; transform:translateY(0) } }

    /* Grid of places */
    .grid{ display:grid; grid-template-columns:1fr 1fr; gap:16px; margin:8px 0 24px; text-align:left; }
    .place-card{ border:1px solid rgba(212,163,115,.22); background:rgba(20,22,24,.6); backdrop-filter:blur(8px); border-radius:16px; overflow:hidden; transition:border-color .3s ease, transform .3s ease; }
    .place-card:hover{ border-color:rgba(212,163,115,.4); transform:translateY(-2px); }
    .place-hero{ height:160px; background:linear-gradient(135deg, rgba(212,163,115,.15), rgba(245,158,11,.12)); position:relative; }
    .badge{ position:absolute; top:12px; left:12px; background:var(--amber); color:#0A0B0D; font-weight:700; padding:6px 10px; border-radius:999px; font-size:.85rem; }
    .place-body{ padding:18px 20px; }
    .place-title{ font-family:'Playfair Display',serif; margin:0 0 6px; }
    .meta{ display:flex; gap:8px; align-items:center; color:#d9d9d9; font-size:.95rem; margin-bottom:8px; }
    .desc{ color:var(--muted); margin:10px 0 14px; }
    .info{ display:grid; grid-template-columns:1fr 1fr; gap:10px; margin-bottom:12px; }
    .info-box{ border:1px solid rgba(212,163,115,.18); background:rgba(18,19,21,.5); border-radius:12px; padding:12px 14px; }
    .info-head{ display:flex; gap:8px; align-items:center; color:#fff; font-weight:600; margin-bottom:6px; }
    .info-text{ color:#cfcfcf; font-size:.95rem; }
    .info-link{ color:rgba(212,163,115,.9); text-decoration:none; border-bottom:1px solid rgba(212,163,115,.3); }
    .info-link:hover{ color:var(--gold); border-color:var(--gold); }
    .actions{ display:flex; gap:10px; flex-wrap:wrap; }

    /* Map teaser */
    .map{ margin:6px 0 10px; }
    .map-inner{ border:1px solid rgba(212,163,115,.22); background:rgba(20,22,24,.6); backdrop-filter:blur(8px); border-radius:16px; padding:22px; text-align:center; }
    .map-inner h3{ margin:10px 0 4px; font-family:'Playfair Display',serif; }
    .map-inner p{ color:var(--muted); margin:0 0 12px; }
    .map-tags{ display:flex; gap:8px; justify-content:center; flex-wrap:wrap; }
    .tag{ display:inline-flex; align-items:center; padding:8px 14px; border-radius:999px; background:var(--amber); color:#0A0B0D; font-weight:700; text-decoration:none; }
    .tag:hover{ filter:brightness(1.05); }

    /* Buttons same as 404 */
    .primary-btn,.secondary-btn{ border-radius:12px; padding:14px 28px; font-weight:600; text-decoration:none; display:inline-flex; align-items:center; gap:10px; transition:all .4s cubic-bezier(.16,1,.3,1); position:relative; overflow:hidden; }
    .primary-btn{ background:linear-gradient(135deg,var(--gold) 0%,var(--amber) 100%); color:#0A0B0D; box-shadow:0 8px 32px rgba(212,163,115,.3),0 2px 16px rgba(0,0,0,.1); }
    .primary-btn::before{ content:''; position:absolute; inset:0; left:-100%; background:linear-gradient(90deg,transparent,rgba(255,255,255,.2),transparent); transition:left .6s ease; }
    .primary-btn:hover::before{ left:100% } .primary-btn:hover{ transform:translateY(-3px); box-shadow:0 12px 40px rgba(212,163,115,.4), 0 4px 20px rgba(0,0,0,.15); }
    .secondary-btn{ background:rgba(212,163,115,.08); color:var(--ivory); border:1px solid rgba(212,163,115,.22); backdrop-filter:blur(8px); }
    .secondary-btn:hover{ border-color:rgba(212,163,115,.4); transform:translateY(-2px); box-shadow:0 8px 24px rgba(0,0,0,.12); }

    /* Particles */
    .chocolate-particles{ position:absolute; inset:0; pointer-events:none; overflow:hidden; }
    .particle{ position:absolute; width:6px; height:6px; background:var(--gold); border-radius:50%; opacity:.3; animation:float 6s ease-in-out infinite; }
    .particle-1{ top:20%; left:10% } .particle-2{ top:60%; left:85% } .particle-3{ top:80%; left:20% } .particle-4{ top:30%; left:70% } .particle-5{ top:10%; left:60% } .particle-6{ top:70%; left:40% }
    @keyframes float{ 0%,100%{ transform:translateY(0) scale(1); opacity:.3 } 50%{ transform:translateY(-20px) scale(1.2); opacity:.6 } }

    @media (max-width:980px){ .grid{ grid-template-columns:1fr } }
    @media (max-width:820px){ .container{ padding:0 1.25rem } .primary-btn,.secondary-btn{ width:100%; max-width:280px; justify-content:center } }
  </style>
</Layout>
