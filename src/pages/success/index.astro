---
import Layout from "../../layouts/Layout.astro";
---
<Layout>
    <div class="h-[90vh] w-10/12 mx-auto flex flex-row items-center justify-between border border-gray-300 shadow-2xl ">
        <div class="flex flex-col items-center justify-around max-w-1/2">
            <img src="/assets/thanks.svg" alt="thanks" class="w-1/2 h-auto">
            <h1 class="text-2xl font-bold">Find us online</h1>
            <div class="flex justify-center flex-row">
                <div class="flex justify-between w-1/3 ">
                    <a href="https://twitter.com/artilate_" class="flex w-5">
                        <img src="/assets/x.svg" alt="Twitter" class="w-5 h-auto lg:w-5.5 hover:scale-115 transition-scale duration-200" />
                    </a>
                </div>
                <div class="flex justify-center">
                    <a href="https://www.instagram.com/artilate/" class="flex ">
                        <img src="/assets/ig.svg" alt="Instagram" class="w-5 h-auto lg:w-5.5 hover:scale-115 transition-scale duration-200"  />
                    </a>
                </div>
                
                <div class="flex justify-center">
                    <a href="https://twitter.com/artilate_" class="flex ml-3 hov">
                        <img src="/assets/facebook.svg" alt="Facebook" class="w-6 h-auto lg:w-7 hover:scale-115 transition-scale duration-200" />
                    </a>
                </div>
            </div>
        </div>
        <div class="h-2/3  w-1 bg-[var(--color-1)]/60 mt-[5%]"></div>
        <div class="flex flex-col items-center gap-4 w-full">
            <h1 class="text-3xl font-bold w-1/2">Your purchase was successful</h1>
            <p class="w-1/2">Thank you for your purchase.</p>
        </div>
    </div>
</Layout>

<style>
    h1,h2,h3,h4{
        font-family: var(--font-serif);
    font-weight: 600;
    }
</style>


