---
import Layout from "../../layouts/Layout.astro";
---
<Layout>
  <div class="min-h-[90vh] w-11/12 mt-16 md:mt-0 max-w-6xl mx-auto flex flex-col md:flex-row items-center justify-between border border-gray-300 shadow-2xl p-6 gap-6 md:gap-0">
    <!-- Left Section -->
    <div class="flex flex-col items-center justify-around w-full md:w-1/2 gap-4 text-center">
      <img src="/assets/thanks.svg" alt="thanks" class="w-2/3 max-w-[250px] h-auto" />
      <h1 class="text-2xl font-bold">Find us online</h1>
      <div class="flex justify-center gap-4">
        <a href="https://twitter.com/artilate_" class="w-6">
          <img src="/assets/x.svg" alt="Twitter" class="w-6 h-auto hover:scale-110 transition-transform duration-200" />
        </a>
        <a href="https://www.instagram.com/artilate/" class="w-6">
          <img src="/assets/ig.svg" alt="Instagram" class="w-6 h-auto hover:scale-110 transition-transform duration-200" />
        </a>
        <a href="https://twitter.com/artilate_" class="w-7">
          <img src="/assets/facebook.svg" alt="Facebook" class="w-7 h-auto hover:scale-110 transition-transform duration-200" />
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="hidden md:block h-60 w-[2px] bg-color1/60 mx-6"></div>

    <!-- Right Section -->
    <div class="flex flex-col items-center gap-4 text-center w-full md:w-1/2">
      <h1 class="text-3xl font-bold">Your purchase was successful</h1>
      <p class="text-gray-700">Thank you for your purchase.</p>
    </div>
  </div>
</Layout>

<style>
  h1, h2, h3, h4 {
    font-family: var(--font-serif);
    font-weight: 600;
  }
</style>
