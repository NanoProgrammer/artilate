---
// src/pages/thank-you.astro
import Layout from '../../layouts/Layout.astro'
---

<Layout
  title="Welcome to the Artilate Family — Thank You"
  description="Thank you for joining the Artilate newsletter! Get exclusive updates on our handcrafted chocolates, behind-the-scenes content, and special offers."
  noindex={true}
>
  <main class="thankyou-page">
    <div class="container">
      <!-- Title -->
      <div class="hero">
        <h1 class="page-title">Welcome to the Artilate Family</h1>
        <p class="page-description">
          You’re now part of our story — expect news from our kitchen, new flavours,
          and subscriber-only offers crafted with care.
        </p>
      </div>

      <!-- Highlights -->
      <section class="highlights">
        <div class="highlight-card">
          <h3>Exclusive Updates</h3>
          <p>Be the first to discover new flavours, seasonal boxes, and limited editions.</p>
        </div>
        <div class="highlight-card">
          <h3>Special Offers</h3>
          <p>Subscriber-only perks and early access to our collections.</p>
        </div>
        <div class="highlight-card">
          <h3>Behind the Scenes</h3>
          <p>Stories of cacao origins from Colombia and our craft process.</p>
        </div>
      </section>

      <!-- CTA -->
      <div class="cta">
        <p class="cta-text">Ready to taste the magic?</p>
        <a href="/shop" class="primary-btn">Shop Chocolates</a>
      </div>
    </div>

    <!-- Floating Particles -->
    <div class="particles">
      <div class="particle p1"></div>
      <div class="particle p2"></div>
      <div class="particle p3"></div>
      <div class="particle p4"></div>
    </div>
  </main>
</Layout>

<style>
  .thankyou-page {
    min-height: 100vh;
    background: var(--cacao-black);
    color: var(--warm-ivory);
    position: relative;
    padding: 6rem 1.5rem 4rem;
    text-align: center;
    overflow: hidden;
  }
  .container { max-width: 960px; margin: 0 auto; }

  .hero { margin-bottom: 4rem; }
  .page-title {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2.5rem, 6vw, 4rem);
    color: var(--gold);
    margin-bottom: 1rem;
    text-shadow: 0 4px 20px rgba(212,163,115,0.3);
    animation: slideUp 0.8s ease-out forwards;
  }
  .page-description {
    color: var(--warm-gray);
    font-size: 1.2rem;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
    opacity: 0;
    animation: slideUp 0.8s ease-out 0.4s forwards;
  }

  .highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit,minmax(260px,1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }
  .highlight-card {
    border: 1px solid rgba(212,163,115,0.15);
    background: rgba(20,22,24,0.6);
    backdrop-filter: blur(8px);
    padding: 2rem;
    border-radius: 1.5rem;
    transition: all 0.3s ease;
    opacity: 0;
    transform: translateY(20px);
    animation: slideUp 0.8s ease-out 0.6s forwards;
  }
  .highlight-card:hover {
    border-color: rgba(212,163,115,0.4);
    transform: translateY(-4px);
  }
  .highlight-card h3 {
    font-family: 'Playfair Display', serif;
    color: var(--warm-ivory);
    font-size: 1.4rem;
    margin-bottom: 0.5rem;
  }
  .highlight-card p { color: var(--warm-gray); }

  .cta { margin-top: 2rem; }
  .cta-text { margin-bottom: 1rem; font-size: 1.2rem; color: var(--warm-gray); }
  .primary-btn {
    background: linear-gradient(135deg, var(--gold), var(--amber));
    color: var(--cacao-black);
    padding: 14px 32px;
    border-radius: 12px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }
  .primary-btn:hover { transform: translateY(-3px); }

  /* Particles */
  .particles {
    position: absolute; inset: 0;
    pointer-events: none;
  }
  .particle {
    position: absolute; width: 6px; height: 6px;
    background: var(--gold);
    border-radius: 50%;
    opacity: 0.3;
    animation: float 6s ease-in-out infinite;
  }
  .p1 { top: 20%; left: 10%; animation-delay: 0s; }
  .p2 { top: 70%; left: 80%; animation-delay: 2s; }
  .p3 { top: 40%; left: 60%; animation-delay: 4s; }
  .p4 { top: 85%; left: 25%; animation-delay: 1s; }

  @keyframes slideUp {
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes float {
    0%,100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.2); opacity: 0.6; }
  }
</style>
