---
import {Products} from "../../constants/catalog.js";
import ItemProduct from "./ItemProduct.astro";
---


    <div>
        <h1 class="text-3xl font-bold text-center mt-8">Our Products</h1>
        <p class="text-center text-gray-600 mt-1">Explore our collection of amazing saviours to delight your taste buds</p>
        <div class="flex justify-between items-center max-w-[65vw] mx-auto mt-8">
            <button disabled class="bg-color2 text-white px-4 py-2 rounded-3xl">confectionery</button>
            <button disabled class="bg-color3 text-white px-4 py-2 rounded-3xl">bars</button>
            <button disabled class="bg-color4 text-white px-4 py-2 rounded-3xl">others</button>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-[70vw] mx-auto mt-3">
            {Products.map((product) => {
            return (
                <ItemProduct product={product} key={product.id} />
            );
        })}
        </div>
    </div>
