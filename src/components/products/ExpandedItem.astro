---
import { Products } from "../../constants/catalog";
const { id } = Astro.props;
import ButtonProvider from './ButtonProvider.jsx';
const product = Products[id - 1];
const relatedProducts = product?.idRelated?.map((relId) => Products[relId - 1]) || [];
---

<div class="mx-auto max-w-5xl p-6 mt-20 bg-white rounded-xl shadow-lg grid md:grid-cols-2 gap-10 border border-[var(--color-4)]">
  <img
    src={product?.image}
    alt={product?.title}
    class="w-full h-auto max-h-64 object-cover rounded-xl border-2 border-[var(--color-1)]"
    transition:name={`img-${id}`}
  />
  <div class="flex flex-col gap-4">
    <h2 class="text-3xl font-bold text-[var(--color-1)]" transition:name={`title-${id}`}>
      {product?.title}
    </h2>
    <p class="text-gray-700">{product?.description}</p>

    <h3 class="text-xl font-semibold mt-2 text-[var(--color-4)]">Ingredients</h3>
    <ul class="list-disc list-inside text-gray-600">
      {product?.ingredients.map((ingredient) => <li>{ingredient}</li>)}
    </ul>

    <div class="flex items-center justify-between mt-4">
      <span class="text-2xl font-bold text-[var(--color-2)]">${product?.price}</span>
      
      <ButtonProvider className={"bg-[var(--color-3)]/90 text-white hover:scale-110 transition-transform ease-in-out duration-200 px-6 py-2 rounded-3xl cursor-pointer"} imgUrl={product?.image} title={product?.title} description={product?.description} id={product?.id} price={product?.price} client:load/>
    </div>
  </div>
</div>

{relatedProducts.length > 0 && (
  <div class="max-w-6xl mx-auto mt-12 px-6 ">
    <h3 class="text-2xl font-bold mb-6 text-[var(--color-4)]">Related Products</h3>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 mb-12">
      {relatedProducts.map((item) => (
        <a href={`/products/${item.id}`} class="bg-white rounded-xl shadow-md p-4 flex flex-col items-center text-center border border-[var(--color-4)] hover:shadow-lg transition-shadow duration-200">
          <img src={item.image} alt={item.title} class="w-28 h-28 object-cover rounded-lg mb-4 border border-gray-200" transition:name={`img-${item.id}`} />
          <h4 class="text-lg font-semibold text-[var(--color-1)] mb-1">{item.title}</h4>
          <p class="text-sm text-gray-600 mb-2">{item.shortDescription}</p>
          <span class="font-bold text-[var(--color-4)] mb-2">${item.price}</span>
          <button class="bg-[var(--color-2)]/90 text-white hover:scale-105 transition-transform duration-200 px-4 py-1 rounded-2xl text-sm cursor-pointer">
            see more
          </button>
          
        </a>
      ))}
    </div>
  </div>
)}

