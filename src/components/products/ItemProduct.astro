---
const { product,style } = Astro.props;
const { title, description, image,price, id } = product;
 
---

<a href={`/products/${id}`}>
    <div class="flex flex-col items-center gap-4 border-2 border-[var(--color-5)] rounded-lg p-4 fade-item" style={style}>
        <h2 class="text-2xl font-bold text-center">{title}</h2>
        <img src={image} alt={title} transition:name={`img-${id}`} class="w-56 h-auto max-h-[200px] object-cover rounded-lg border-2 border-[var(--color-1)]"/>
        <p class="text-center max-w-46">{description}</p>
        <div class="flex flex-row items-center gap-4">
            <h2 class="text-center max-w-46">$ {price}</h2>
        <button class="bg-[var(--color-3)]/90 text-white hover:scale-110 transition-scale ease-in-out duration-200 px-4 py-2 rounded-3xl">+</button>
        </div>
    </div>
</a>

<style>
    img {
        transition: transform 0.3s ease-in-out;
    }
    img:hover {
        transform: scale(1.05);
    }
    .fade-item {
  opacity: 0;
  transform: translateX(-10px), translateY(10px);

  animation: fadeIn 0.5s ease-in-out forwards;
}

@keyframes fadeIn {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
</style>