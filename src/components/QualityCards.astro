---
// src/components/QualityCards.astro
---

<section class="quality-section" aria-labelledby="quality-title">
  <div class="container scale-95">
    <div class="section-header scroll-reveal">
      <h2 id="quality-title" class="section-title">
        Crafted with <span class="title-accent">Excellence</span>
      </h2>
      <p class="section-description">
        Hand-finished, small-batch chocolate — made fresh after you order for unforgettable flavor.
      </p>

      <!-- CRO: value props + primary CTA -->
      <div class="cta-row">
        <ul class="cta-bullets" aria-label="Key benefits">
          <li>Freshly made after you order</li>
          <li>Small batches</li>
          <li>Single-origin Colombian cacao</li>
        </ul>
    
      </div>
      <p class="cta-micro">Limited runs · Gift-ready presentation</p>
    </div>

    <div class="quality-grid">
      <!-- Hand-Painted -->
      <article class="quality-card scroll-reveal">
        <div class="card-visual">
          <div class="card-icon" aria-hidden="true">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14.5 7.5l2 2"/>
              <path d="M4 20c1.6-.9 2.8-1.9 3.5-3.5.3-.7.5-1.5.5-2.3L14 8.2l3.8 3.8-6 6c-.8 0-1.6.2-2.3.5C5.9 19.2 4.9 20.4 4 22"/>
              <path d="M14 8.2l2.8-2.8a2 2 0 0 1 2.8 0l.3.3a2 2 0 0 1 0 2.8L17.8 11"/>
            </svg>
          </div>
        </div>
        <div class="card-content">
          <h3 class="card-title">Hand-Painted</h3>
          <p class="card-description">Cocoa-butter colors applied by hand for unique marbling, gradients, and finishes in every bonbon.</p>
        </div>
      </article>

      <!-- Small Batches -->
      <article class="quality-card scroll-reveal">
        <div class="card-visual">
          <div class="card-icon" aria-hidden="true">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              <rect x="4" y="9" width="16" height="8" rx="2"/>
              <path d="M6 9V7a2 2 0 0 1 2-2h4"/>
              <path d="M9 5c0-1 .8-2 1.8-2"/>
              <path d="M13 5c0-1 .8-2 1.8-2"/>
              <path d="M4 13h16"/>
            </svg>
          </div>
        </div>
        <div class="card-content">
          <h3 class="card-title">Small Batches</h3>
          <p class="card-description">Limited runs for a clean temper, consistent texture, and brighter flavor.</p>
        </div>
      </article>

      <!-- Fresh / Made-to-Order (sin tiempos) -->
      <article class="quality-card scroll-reveal">
        <div class="card-visual">
          <div class="card-icon" aria-hidden="true">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 8l9-5 9 5-9 5-9-5z"/>
              <path d="M21 8v6a2 2 0 0 1-1 1.7l-8 4.3-8-4.3A2 2 0 0 1 3 14V8"/>
              <path d="M8 15l4 2 4-2"/>
            </svg>
          </div>
        </div>
        <div class="card-content">
          <h3 class="card-title">Fresh, Made-to-Order</h3>
          <p class="card-description">
            We craft each box after we receive your order — peak flavor, premium finish, zero compromise.
          </p>
        </div>
      </article>
    </div>
    <div class="cta">
      <a href="/shop" class="btn-inline" aria-label="Order Now">Order Now →</a>
    </div>
  </div>
</section>

<style>
  :root { --cacao:#0A0B0D; --ivory:#FAFAF9; --gold:#D4A373; --amber:#F59E0B; --muted:rgba(250,250,249,.8); }
  .cta{
    text-align:center; margin-top:2.1rem;
  }
  .quality-section{ padding:4.75rem 0; background:var(--cacao); color:var(--ivory); position:relative; }
  .container{ max-width:1200px; margin:0 auto; padding:0 1.5rem; }

  .section-header{ text-align:center; margin-bottom:2.1rem; }
  .section-title{ font-family:'Playfair Display',serif; font-size:clamp(1.9rem,3.6vw,2.6rem); font-weight:700; margin-bottom:.6rem; }
  .title-accent{ background:linear-gradient(135deg,var(--gold) 0%,var(--amber) 100%); -webkit-background-clip:text; background-clip:text; -webkit-text-fill-color:transparent; }
  .section-description{ font-size:.98rem; color:var(--muted); max-width:620px; margin:0 auto 1rem; line-height:1.65; }

  /* CRO bar */
  .cta-row{ display:flex; align-items:center; justify-content:center; gap:.7rem; flex-wrap:wrap; margin-top:.1rem; }
  .cta-bullets{ display:flex; gap:.7rem; flex-wrap:wrap; padding:0; margin:0; list-style:none; }
  .cta-bullets li{
    font-size:.82rem; color:rgba(250,250,249,.9);
    border:1px solid rgba(212,163,115,.25);
    border-radius:999px; padding:.4rem .7rem;
    background:linear-gradient(180deg,rgba(20,22,24,.55),rgba(20,22,24,.4));
    white-space:nowrap;
  }
  .btn-primary{
    display:inline-block; padding:.68rem 1.06rem; border-radius:999px; font-weight:800; letter-spacing:.2px;
    text-decoration:none; color:var(--cacao);
    background:linear-gradient(135deg,var(--gold),var(--amber));
    box-shadow:0 8px 24px rgba(212,163,115,.25);
    transition:transform .2s ease, box-shadow .2s ease;
    font-size:.92rem;
  }
  .btn-primary:hover{ transform:translateY(-2px); box-shadow:0 12px 30px rgba(212,163,115,.35); }
  .cta-micro{ margin-top:.4rem; font-size:.82rem; opacity:.8; }

  .quality-grid{ display:grid; grid-template-columns:repeat(3,1fr); gap:1.4rem; }

  .quality-card{
    background:linear-gradient(180deg,rgba(20,22,24,.6),rgba(20,22,24,.46));
    border:1px solid rgba(212,163,115,.16);
    border-radius:16px; overflow:hidden;
    transition:border-color .25s ease, box-shadow .25s ease, transform .25s ease;
  }
  .quality-card:hover{ border-color:rgba(212,163,115,.28); box-shadow:0 10px 28px rgba(0,0,0,.18); transform:translateY(-2px); }

  .card-visual{
    height:104px; display:flex; align-items:center; justify-content:center; position:relative;
    background:radial-gradient(120px 60px at 50% 30%, rgba(212,163,115,.18), transparent 60%);
  }
  .card-icon{
    width:50px; height:50px; border-radius:14px; display:grid; place-items:center; color:var(--ivory);
    border:1px solid rgba(212,163,115,.3);
    background:linear-gradient(135deg, rgba(212,163,115,.12), rgba(245,158,11,.08));
    box-shadow:inset 0 0 0 1px rgba(250,250,249,.06);
  }
  .card-icon svg{ width:25px; height:25px; }

  .card-content{ padding:1.15rem 1.15rem 1.35rem; text-align:center; }
  .card-title{ font-family:'Playfair Display',serif; font-size:1.04rem; font-weight:600; margin-bottom:.35rem; letter-spacing:.2px; }
  .card-description{ color:var(--muted); font-size:.9rem; line-height:1.55; }

  .btn-inline{
    display:inline-block; margin-top:.55rem; font-weight:800; text-decoration:none; font-size:.9rem;
    color:var(--ivory); border-bottom:2px solid rgba(212,163,115,.6); padding-bottom:2px;
    transition:border-color .2s ease, opacity .2s ease;
  }
  .btn-inline:hover{ border-color:var(--amber); opacity:.9; }

  @media (max-width:1024px){
    .quality-grid{ grid-template-columns:repeat(2,1fr); gap:1.1rem; }
  }
  @media (max-width:768px){
    .quality-section{ padding:3.4rem 0; }
    .container{ padding:0 1rem; }
    .quality-grid{ grid-template-columns:1fr; gap:.95rem; }
    .card-visual{ height:98px; }
    .cta-row{ gap:.55rem; }
  }
</style>
