---
// src/components/HeroShop.astro — CRO-optimized hero (scarcity + urgency)
---

<section class="hero shop-hero">
  <div class="bg-wrap"><div class="bg-grad"></div></div>

  <div class="wrap">
    <div class="grid">
      <!-- LEFT -->
      <div class="col-left">
        <h1 class="title">
          Only <span class="hl">100 Boxes</span> Made Weekly. <br />Order Before They're Gone.
        </h1>

        <p class="desc">
          Handcrafted in Alberta using fine-flavour Colombian cacao, our filled bonbons are made in limited small batches each week.
        </p>


        <div class="actions">
          <a href="#bonbons" class="btn btn-primary">Order Now — Ships Fast</a>
          <a href="#gifts" class="btn btn-secondary">View Gifts</a>
        </div>
      </div>

      <!-- RIGHT -->
      <div class="col-right">
        <figure class="shot">
          <picture>
            <source
              type="image/avif"
              srcset="/shop/shophero-480.avif 480w, /shop/shophero-800.avif 800w, /shop/shophero-1200.avif 1200w"
              sizes="(max-width:820px) 82vw, 380px"
            />
            <source
              type="image/webp"
              srcset="/shop/shophero-480.webp 480w, /shop/shophero-800.webp 800w, /shop/shophero-1200.webp 1200w"
              sizes="(max-width:820px) 82vw, 380px"
            />
            <img
              src="/shop/shophero-800.avif"  
              alt="Handcrafted bonbons with silky golden filling"
              width="800" height="800"
              loading="eager"
              decoding="async"
              fetchpriority="high"
              class="img"
            />
          </picture>
        </figure>
      </div>
    </div>
  </div>
</section>

<style>
  :root{
    --cacao:#0A0B0D; --ivory:#FAFAF9; --muted:rgba(250,250,249,.84);
    --gold:#D4A373; --amber:#F59E0B;
  }

  .hero{
    background:var(--cacao); color:var(--ivory);
    min-height: calc(100svh - var(--header-h,84px));
    padding: clamp(10px,2vw,18px) 0;
    display:flex; align-items:center; position:relative; overflow:hidden;
  }
  .bg-wrap{ position:absolute; inset:0; overflow:hidden; }
  .bg-grad{
    position:absolute; inset:0;
    background:
      radial-gradient(60% 60% at 15% 20%, rgba(212,163,115,.12) 0%, transparent 60%),
      radial-gradient(70% 70% at 85% 75%, rgba(245,158,11,.10) 0%, transparent 60%),
      linear-gradient(135deg, rgba(10,11,13,.72), rgba(10,11,13,.58));
  }

  .wrap{ width:100%; max-width:1080px; margin:0 auto; padding:0 clamp(14px,3vw,28px); position:relative; z-index:1; }
  .grid{
    display:grid; gap: clamp(16px, 3vw, 32px);
    grid-template-columns: 1.08fr .92fr;
    align-items:center;
    min-height: min(72svh, 720px);
  }

  .title{
    font-family:'Playfair Display',serif; font-weight:800;
    font-size: clamp(28px, 4.6vw, 48px);
    line-height:1.08; margin:6px 0 8px; text-wrap:balance;
    text-shadow:0 2px 14px rgba(212,163,115,.18);
  }
  .hl{
    background:linear-gradient(135deg, var(--gold) 0%, var(--amber) 100%);
    -webkit-background-clip:text; background-clip:text; -webkit-text-fill-color:transparent;
  }

  .desc{
    max-width:52ch; font-size: clamp(15px,1.6vw,18px);
    line-height:1.5; color:var(--muted); margin:0 0 12px;
  }

  .actions{ display:flex; gap:10px; flex-wrap:wrap; }
  .btn{
    display:inline-flex; align-items:center; justify-content:center;
    border-radius:12px; padding:12px 18px; font-weight:700;
    text-decoration:none; font-size: clamp(14px,1.4vw,16px);
    transition: transform .25s ease, box-shadow .25s ease; white-space:nowrap;
  }
  .btn-primary{
    color:#111; background:linear-gradient(135deg, var(--gold), var(--amber));
    box-shadow:0 10px 30px rgba(212,163,115,.30);
  }
  .btn-primary:hover{ transform:translateY(-1px); box-shadow:0 14px 36px rgba(212,163,115,.40); }
  .btn-secondary{
    color:var(--ivory); background:rgba(212,163,115,.08);
    border:1px solid rgba(212,163,115,.25);
  }
  .btn-secondary:hover{ border-color:rgba(212,163,115,.45); }

  .col-right{ display:flex; justify-content:center; align-items:center; }
  .shot{
    position:relative;
    width: clamp(220px, 30vw, 380px);
    max-height: clamp(220px, 32vw, 380px);
    aspect-ratio: 1 / 1;
    border-radius:18px; overflow:hidden;
    box-shadow:0 14px 40px rgba(0,0,0,.45), 0 6px 18px rgba(212,163,115,.12);
  }
  .img{
    width:100%; height:100%; object-fit:cover; object-position:center 62%;
    display:block; scale:1.08;
  }

  @media (max-width:820px){
    .grid{ grid-template-columns:1fr; gap:12px; min-height:auto; }
    .col-right{ order:-1; }
    .shot{ width:min(78vw, 360px); max-height:min(45vh, 360px); margin:6px auto 2px; }
    .title, .desc{ text-align:center; }
    .actions{ justify-content:center; }
  }

  @media (max-width:420px){
    .hero{ padding:6px 0; }
    .title{ font-size: clamp(22px, 6.8vw, 28px); margin:4px 0 6px; line-height:1.1; }
    .desc{ font-size:14px; line-height:1.42; margin-bottom:8px; }
    .btn{ width:100%; max-width:320px; padding:12px 16px; }
    .shot{ width:82vw; max-height:40vh; }
  }
</style>
