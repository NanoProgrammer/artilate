---
interface NavLink { href: string; label: string }
const links: NavLink[] = [
  { href: "#who", label: "Who we are" },
  { href: "#what", label: "What we do" },
  { href: "#ethics", label: "Our ethics" },
  { href: "#sell", label: "Shop" },
];
---

<header class="site-header" role="banner">
  <div class="container row">
    <a href="#top" aria-label="Artilate â€” Home" class="brand">
      <span class="crest" aria-hidden="true">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.3">
          <path d="M12 3c-3.5 2.2-6 5.4-6 8.6 0 3.6 2.7 6.4 6 8.4 3.3-2 6-4.8 6-8.4 0-3.2-2.5-6.4-6-8.6z"/>
          <path d="M12 4.5V20"/>
        </svg>
      </span>
      <span class="word">Artilate</span>
    </a>

    <nav class="nav" aria-label="Primary">
      {links.map(l => <a href={l.href} class="link">{l.label}</a>)}
      <a href="#contact" class="cta">Contact</a>
    </nav>
  </div>
</header>

<style>
  .site-header{position:sticky;top:0;z-index:50;background:rgba(17,20,22,.68);backdrop-filter:blur(10px);border-bottom:1px solid rgba(212,163,115,.22)}
  .row{display:flex;align-items:center;justify-content:space-between;padding:.75rem 0}
  .brand{display:inline-flex;align-items:center;gap:.6rem;font-weight:700;letter-spacing:.18em;text-transform:uppercase}
  .crest{display:grid;place-items:center;width:38px;height:38px;border-radius:999px;border:1px solid rgba(212,163,115,.6);
    background: radial-gradient(120% 120% at 30% 30%, rgba(212,163,115,.18), transparent 60%);}
  .crest svg{width:18px;height:18px;color:var(--gold)}
  .nav{display:flex;align-items:center;gap:1rem}
  .link{opacity:.92;padding:.35rem .4rem;border-radius:10px}
  .link:hover{opacity:1;background:rgba(212,163,115,.10)}
  .cta{display:inline-flex;align-items:center;justify-content:center;min-height:44px;padding:.6rem 1rem;border-radius:9999px;
    color:var(--text-warm);background:#6f3f16;border:1px solid #c58a4f;box-shadow:0 6px 18px rgba(0,0,0,.35)}
  .cta:hover{background:#7f4a1c}
  @media (max-width:900px){.nav .link{display:none}}
</style>
