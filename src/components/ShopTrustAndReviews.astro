<style>
  /* Component-scoped design tokens */
  .vt {
    --bg: #0A0B0D;
    --panel: #0B0E11;
    --ink: #F7F5EF;
    --muted: rgba(255,255,255,.65);
    --line: rgba(255,255,255,.08);
    --gold: #D7B07A;
    --amber: #F5A623;
    --radius: clamp(14px, 2.5vw, 18px);
    --stat-gap: clamp(1.2rem, 2.5vw, 1.8rem);
    --card-pad: clamp(1.6rem, 3.5vw, 2.4rem);

    background: var(--bg);
    color: var(--ink);
    line-height: 1.6;
    padding: clamp(2rem, 5vw, 3rem) 0 clamp(2.5rem, 6vw, 4rem);
    position: relative;
    overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  }

  .vt::before {
    content: '';
    position: absolute;
    top: -150px;
    left: 50%;
    transform: translateX(-50%);
    width: clamp(300px, 50vw, 600px);
    height: clamp(300px, 50vw, 600px);
    background: radial-gradient(circle, rgba(215,176,122,0.04) 0%, transparent 70%);
    pointer-events: none;
    filter: blur(60px);
  }

  /* STATS HERO */
  .stats-hero {
    max-width: 1200px;
    margin: 0 auto clamp(2.5rem, 6vw, 4rem);
    padding: 0 clamp(1rem, 3vw, 1.5rem);
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(260px, 100%), 1fr));
    gap: var(--stat-gap);
    position: relative;
    z-index: 1;
  }

  .stat-card {
    position: relative;
    display: flex;
    align-items: center;
    gap: clamp(1.1rem, 2.5vw, 1.5rem);
    padding: var(--card-pad);
    background: rgba(255,255,255,.02);
    border: 1px solid var(--line);
    border-radius: var(--radius);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .stat-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(215,176,122,.03), transparent 60%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .stat-card:hover {
    transform: translateY(-3px);
    border-color: rgba(215,176,122,.15);
    background: rgba(255,255,255,.03);
    box-shadow: 0 16px 48px rgba(0,0,0,.4);
  }

  .stat-card:hover::before { opacity: 1; }

  .stat-icon-wrap {
    width: clamp(48px, 9vw, 56px);
    height: clamp(48px, 9vw, 56px);
    display: grid;
    place-items: center;
    border-radius: clamp(12px, 2vw, 15px);
    background: rgba(255,255,255,.04);
    border: 1px solid rgba(255,255,255,.08);
    flex-shrink: 0;
    position: relative;
    overflow: hidden;
  }

  .stat-icon-wrap::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--gold), var(--amber));
    opacity: .12;
  }

  .stat-icon-wrap.secondary::before { background: linear-gradient(135deg, #6B5CE7, #8B7FEE); }
  .stat-icon-wrap.tertiary::before { background: linear-gradient(135deg, #E85D75, #F27A8F); }

  .stat-icon {
    width: clamp(24px, 4.5vw, 28px);
    height: clamp(24px, 4.5vw, 28px);
    color: var(--gold);
    stroke-width: 2;
    position: relative;
    z-index: 1;
  }

  .stat-icon-wrap.secondary .stat-icon { color: #8B7FEE; }
  .stat-icon-wrap.tertiary .stat-icon { color: #F27A8F; }

  .stat-content { display: flex; flex-direction: column; gap: 0.3rem; z-index: 1; }
  .stat-number { font-size: clamp(1.75rem, 4.5vw, 2.3rem); font-weight: 700; line-height: 1; letter-spacing: -0.03em; color: var(--ink); }
  .stat-label { font-size: 0.75rem; color: var(--muted); font-weight: 500; letter-spacing: 0.02em; text-transform: uppercase; }

  /* RIBBON PREMIUM */
  .ribbon-wrap { max-width: 1200px; margin: 0 auto clamp(2rem, 4vw, 2.5rem); padding: 0 clamp(1rem, 3vw, 1.5rem); position: relative; z-index: 1; }
  .ribbon { display: flex; flex-wrap: wrap; gap: clamp(.5rem, 1.2vw, .7rem); list-style: none; align-items: center; justify-content: center; }
  .r-item { display: inline-flex; align-items: center; padding: clamp(.5rem, 1.2vw, .65rem) clamp(.9rem, 2vw, 1.2rem); border-radius: 999px; border: 1px solid var(--line); background: rgba(255,255,255,.02); color: var(--muted); font-size: clamp(.8rem, 1.6vw, .85rem); font-weight: 500; letter-spacing: 0.01em; transition: all 0.3s ease; }
  .r-item:hover { background: rgba(255,255,255,.04); border-color: rgba(215,176,122,.2); color: var(--ink); }

  .hairline { max-width: 1200px; height: 1px; margin: clamp(1.5rem, 3vw, 2rem) auto; background: linear-gradient(90deg, transparent, rgba(255,255,255,.1), transparent); }

  /* TESTIMONIALS */
  .row { max-width: min(1400px, 96vw); margin: 0 auto; padding: 0 .8rem; overflow: hidden; mask-image: linear-gradient(to right, transparent, #000 5%, #000 95%, transparent); -webkit-mask-image: linear-gradient(to right, transparent, #000 5%, #000 95%, transparent); }
  .row + .row { margin-top: clamp(.9rem, 2vw, 1.2rem); }
  .belt { display: flex; gap: clamp(.8rem, 1.5vw, 1.2rem); width: max-content; animation: slide 40s linear infinite; }
  .rev .belt { animation-direction: reverse; animation-duration: 43s; }

  .card { flex: 0 0 auto; width: clamp(300px, 88vw, 540px); padding: clamp(1.3rem, 3vw, 1.8rem) clamp(1.5rem, 3.5vw, 2rem); border-radius: var(--radius); background: rgba(255,255,255,.02); border: 1px solid var(--line); box-shadow: 0 8px 32px rgba(0,0,0,.3); transition: all 0.3s ease; }
  .card:hover { background: rgba(255,255,255,.03); border-color: rgba(215,176,122,.12); transform: translateY(-2px); }

  .meta { display: flex; align-items: center; gap: clamp(.7rem, 1.5vw, 1rem); margin-bottom: clamp(.7rem, 1.5vw, 1rem); }
  .avatar { width: clamp(40px, 7vw, 46px); height: clamp(40px, 7vw, 46px); border-radius: 999px; display: grid; place-items: center; font-weight: 600; font-size: clamp(.8rem, 1.6vw, .9rem); letter-spacing: 0.05em; color: var(--gold); background: rgba(215,176,122,.08); border: 1px solid rgba(215,176,122,.15); }
  .who { min-width: 0; flex: 1; }
  .name { margin: 0 0 .2rem; font-size: clamp(.9rem, 1.8vw, .98rem); font-weight: 600; line-height: 1.3; color: var(--ink); }
  .role { margin: 0; font-size: clamp(.75rem, 1.5vw, .8rem); color: rgba(255,255,255,.5); line-height: 1.3; font-weight: 400; }
  .stars { margin-left: auto; color: var(--gold); letter-spacing: .05em; font-size: clamp(.85rem, 1.6vw, .9rem); opacity: .7; }
  .text { margin: 0; color: var(--muted); font-size: clamp(.92rem, 1.9vw, 1rem); line-height: 1.6; font-weight: 400; }

  @keyframes slide { from { transform: translateX(0); } to { transform: translateX(-50%); } }

  /* Responsive refinements */
  @media (max-width: 900px) { .stats-hero { grid-template-columns: repeat(auto-fit, minmax(min(220px, 100%), 1fr)); } }
  @media (max-width: 640px) {
    .vt::before { width: 250px; height: 250px; top: -80px; }
    .stats-hero { grid-template-columns: 1fr; }
    .row { mask-image: linear-gradient(to right, transparent, #000 3%, #000 97%, transparent); -webkit-mask-image: linear-gradient(to right, transparent, #000 3%, #000 97%, transparent); }
  }
  @media (prefers-reduced-motion: reduce) { .belt { animation: none; } * { transition: none !important; } }
