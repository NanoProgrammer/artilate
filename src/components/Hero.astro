---
// Hero (responsive + header aware + GPU-safe animations)
---

<section class="hero" style="--header-h:84px">
  <div class="hero-background">
    <!-- BG responsive (1920 base) -->
   

    <div class="hero-gradient"></div>

    <div class="chocolate-particles" aria-hidden="true">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
      <div class="particle particle-6"></div>
    </div>
  </div>

  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <div class="hero-badge">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          <span>Handcrafted Excellence</span>
        </div>

        <h1 class="hero-title scroll-reveal">
          From Colombian <span class="title-highlight">Cacao</span> to Your Table
        </h1>

        <p class="hero-description scroll-reveal">
          Handcrafted bonbons bursting with flavour, colour, and passion made in Alberta with single-origin Colombian cacao.
        </p>

        <div class="hero-actions">
          <a href="/shop" class="primary-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/>
              <line x1="3" y1="6" x2="21" y2="6"/>
              <path d="M16 10a4 4 0 0 1-8 0"/>
            </svg>
            Shop Chocolates Now
          </a>
          <a href="/find-us" class="secondary-btn">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
              <path d="M21 10c0 6-9 13-9 13S3 16 3 10a9 9 0 1 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            Locations
          </a>
        </div>
      </div>

      <div class="hero-visual fade-in-right">
        <div class="hero-image-container">
          <!-- LCP responsive -->
          <picture class="hero-image">
            <source
              type="image/avif"
              srcset="/assets/hero-img-420.avif 420w,"
              sizes="(max-width:768px) 88vw, (max-width:1200px) 42vw, 520px" />
            <source
              type="image/webp"
              srcset="/assets/hero-img-420.webp 420w,"
              sizes="(max-width:768px) 88vw, (max-width:1200px) 42vw, 520px" />
            <img
              src="/assets/hero-img-800.webp"
              alt="handcrafted chocolate"
              width="420" height="316"
              loading="eager" decoding="async" fetchpriority="high"
              style="width:100%;height:auto;display:block;border-radius:24px" />
          </picture>
        </div>
      </div>
    </div>
  </div>

  <div class="hero-crack" aria-hidden="true">
    <svg viewBox="0 0 1200 60" class="crack-svg" preserveAspectRatio="none">
      <path class="crack-line" d="M0,30 Q300,20 600,30 T1200,25" stroke="url(#heroGradient)" stroke-width="2" fill="none"/>
      <defs>
        <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%"  style="stop-color:#D4A373;stop-opacity:0"/>
          <stop offset="30%" style="stop-color:#D4A373;stop-opacity:.6"/>
          <stop offset="50%" style="stop-color:#F59E0B;stop-opacity:1"/>
          <stop offset="70%" style="stop-color:#D4A373;stop-opacity:.6"/>
          <stop offset="100%"style="stop-color:#D4A373;stop-opacity:0"/>
        </linearGradient>
      </defs>
    </svg>
  </div>
</section>

<style>
  :root{
    --cacao:#0A0B0D; --ivory:#FAFAF9; --gold:#D4A373; --amber:#F59E0B; --muted:rgba(250,250,249,.8);
  }

  .hero{
    position:relative;
    max-height: calc(100svh - var(--header-h) + 20px);
    margin: 0 auto;
    padding-top: max(env(safe-area-inset-top), 0px);
    display:flex; align-items:center;
    overflow:hidden; background:var(--cacao); color:var(--ivory);
  }
  @media (max-width: 480px){ .hero{ --header-h:74px; } }

  .hero-background{ position:absolute; inset:0; overflow:hidden; }

  /* âœ… BG: composited animation (opacity/transform) */
  .hero-explosion{
    position:absolute; inset:0; width:100%; height:100%;
    object-fit:cover; object-position:center; z-index:0;
    filter:saturate(1.35) contrast(1.1) brightness(1.05);
    opacity:0; transform:scale(1.06);
    animation:heroIn .9s cubic-bezier(.16,1,.3,1) .2s both;
  }
  @keyframes heroIn{ to{ opacity:1; transform:scale(1) } }

  .hero-gradient{
    position:absolute; inset:0;
    background:linear-gradient(135deg, rgba(10,11,13,.55) 0%, rgba(10,11,13,.38) 100%);
    z-index:1;
  }

  .container{ max-width:1280px; margin:0 auto; padding:0 clamp(1rem, 4vw, 2rem); position:relative; z-index:2; width:100%; }
  .hero-content{
    display:grid; grid-template-columns: 1.05fr .95fr;
    gap: clamp(1.5rem, 3.5vw, 4rem);
    scale: 0.73; align-items:center;
    min-height: clamp(60vh, 78svh, 86vh);
  }

  .hero-badge{
    display:inline-flex; align-items:center; gap:8px;
    background:rgba(212,163,115,.15); border:1px solid rgba(212,163,115,.3); color:var(--gold);
    padding:8px 14px; border-radius:999px; font-weight:600; font-size:.9rem; margin-bottom:1rem;
    backdrop-filter:blur(8px);
  }
  .hero-title{ font-family:'Playfair Display',serif; font-size: clamp(3rem, 8vw, 4.5rem); font-weight:700; line-height:1.1; margin-bottom:1rem; text-shadow:0 4px 20px rgba(212,163,115,.2); }
  .title-highlight{ background:linear-gradient(135deg, var(--gold) 0%, var(--amber) 100%); -webkit-background-clip:text; background-clip:text; -webkit-text-fill-color:transparent; }
  .hero-description{ font-size: clamp(1.1rem, 2.6vw, 1.45rem); line-height:1.7; color:var(--muted); margin-bottom:1.75rem; max-width: 52ch; }
  .hero-actions{ display:flex; gap:.9rem; flex-wrap:wrap; }

  .primary-btn,.secondary-btn{
    border-radius:12px; padding:18px 28px; font-weight:600; text-decoration:none; display:inline-flex; align-items:center; gap:10px; transition:all .4s cubic-bezier(.16,1,.3,1); position:relative; overflow:hidden; font-size: clamp(1rem, 2.4vw, 1.3rem);
  }
  .primary-btn{ background:linear-gradient(135deg, var(--gold) 0%, var(--amber) 100%); color:var(--cacao); box-shadow:0 8px 32px rgba(212,163,115,.3), 0 2px 16px rgba(0,0,0,.1); }
  .primary-btn::before{ content:''; position:absolute; inset:0; left:-100%; background:linear-gradient(90deg, transparent, rgba(255,255,255,.2), transparent); transition:left .6s ease; }
  .primary-btn:hover::before{ left:100%; }
  .primary-btn:hover{ transform:translateY(-2px); box-shadow:0 12px 40px rgba(212,163,115,.4), 0 4px 20px rgba(0,0,0,.15); }

  .secondary-btn{ background:rgba(212,163,115,.08); color:var(--ivory); border:1px solid rgba(212,163,115,.22); backdrop-filter:blur(8px); }
  .secondary-btn:hover{ border-color:rgba(212,163,115,.4); transform:translateY(-2px); box-shadow:0 8px 24px rgba(0,0,0,.12); }

  .hero-visual{ position:relative; height: clamp(360px, 48vw, 600px); }
  .hero-image-container{ position:relative; width:100%; height:40%; }

  .hero-image{
    display:block; width: clamp(240px, 36vw, 840px);
    aspect-ratio: 1.2 / 1;
    margin-top: 25%;
    position:absolute; top:70%; left:50%; transform:translate(-50%,-50%);
    border-radius:24px; overflow:hidden;
  }

  .hero-crack{ position:absolute; bottom:0; left:0; right:0; height: clamp(36px, 6vw, 60px); pointer-events:none; }
  .crack-svg{ width:100%; height:100%; opacity:0; animation:fade .8s ease-out .8s both; }
  @keyframes fade { to { opacity:1 } }

  .chocolate-particles{ position:absolute; inset:0; pointer-events:none; overflow:hidden; }
  .particle{ position:absolute; width:4px; height:4px; background:var(--gold); border-radius:50%; opacity:.4; animation:float 8s ease-in-out infinite; }
  .particle-1{ top:20%; left:15%; animation-delay:0s; } .particle-2{ top:70%; left:85%; animation-delay:1s; }
  .particle-3{ top:40%; left:10%; animation-delay:2s; } .particle-4{ top:80%; left:70%; animation-delay:3s; }
  .particle-5{ top:15%; left:90%; animation-delay:4s; } .particle-6{ top:60%; left:30%; animation-delay:5s; }
  @keyframes float{ 0%,100%{ transform:translateY(0) scale(1); opacity:.4; } 50%{ transform:translateY(-30px) scale(1.5); opacity:.8; } }

  @media (max-width: 1024px){
    .hero-content{ grid-template-columns: 1fr; gap: clamp(1.25rem, 2.5vw, 3rem); text-align:center; min-height: auto; }
    .hero-visual{ order: -1; height: clamp(300px, 45vw, 420px); }
    .hero-actions{ justify-content:center; }
  }
  @media (max-width: 768px){
    .hero-gradient{ background:linear-gradient(135deg, rgba(10,11,13,.65) 0%, rgba(10,11,13,.55) 100%); }
    .primary-btn,.secondary-btn{ width: min(100%, 320px); justify-content:center; }
  }
  @media (max-width: 420px){ .hero-actions{ gap:.75rem; } }

  @media (prefers-reduced-motion: reduce){
    .hero-explosion, .crack-svg, .particle { animation: none !important; }
  }
  .hero-background::before {
  content: "";
  position: absolute;
  inset: 0;
  background:
    image-set(
      url("/assets/bgExplosion-1280.avif") type("image/avif") 1x,
      url("/assets/bgExplosion-1920.avif") type("image/avif") 2x,
      url("/assets/bgExplosion-1280.webp") type("image/webp") 1x,
      url("/assets/bgExplosion-1920.webp") type("image/webp") 2x
    );
  background-size: cover;
  background-position: center;
  filter: saturate(1.35) contrast(1.1) brightness(1.05);
  opacity: 0;
  transform: scale(1.06);
  animation: heroIn .9s cubic-bezier(.16,1,.3,1) .2s both;
  z-index: 0;
}

</style>

