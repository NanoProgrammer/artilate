---
type Props = {
  title?: string;
  lead?: string;
  paragraphs?: string[];
  imageSrc: string;
  imageAlt: string;
  reverse?: boolean;
};
const {
  title="Who we are",
  lead="A boutique chocolate atelier rooted in Colombia and crafted in Alberta.",
  paragraphs=[
    "We hand-temper, mold and finish each piece with precision.",
    "Tropical character meets modern gourmet technique â€” in small, flawless batches."
  ],
  imageSrc,
  imageAlt,
  reverse=false
} = Astro.props as Props;
---

<section id="who" class="who">
  <div class="container grid">
    {reverse && (
      <figure class="media align-center">
        <img src={imageSrc} alt={imageAlt} loading="lazy" decoding="async" />
      </figure>
    )}
    <div class="copy">
      <h2 class="h">{title}</h2>
      <p class="lead">{lead}</p>
      {paragraphs.map(p => <p class="p">{p}</p>)}
    </div>
    {!reverse && (
      <figure class="media">
        <img src={imageSrc} alt={imageAlt} loading="lazy" decoding="async" />
      </figure>
    )}
  </div>
</section>

<style>
  .who{background:var(--beige);color:var(--cacao);padding:0.5rem 0}
  .grid{display:grid;gap:2rem;grid-template-columns:1fr 1fr;align-items:center}
  @media (max-width:524px){.grid{grid-template-columns:1fr}}
  .media{border-radius:22px;overflow:hidden;filter: drop-shadow(0 16px 38px rgba(0,0,0,.15));}
  .h{font-size:clamp(1.6rem,3.2vw,2.1rem);margin:0 0 .2rem}
  .lead{color:#3b2b24;margin:0 0 .8rem;font-size:1.1rem}
  .p{margin:0 0}
</style>
