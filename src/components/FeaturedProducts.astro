---
import Card from "./Card.astro";
import { Products } from "../constants/catalog.js";
---

<div
  class="container mx-auto py-8 px-4 lg:max-w-4xl bg-[color:var(--color-2)/40] rounded-lg shadow-lg"
  style="filter: var(--filter-color-2)"
>
  <h2
    class="text-3xl font-bold mb-4 text-center text-[color:var(--color-1)/80]"
    style="filter: var(--filter-color-1)"
  >
    Featured Products
  </h2>
  <p
    class="text-md text-center text-[color:var(--color-1)/80] mb-8"
    style="filter: var(--filter-color-1)"
  >
    See the most recent products of our collection
  </p>

  <div class="flex flex-wrap justify-center items-center gap-8">
    {
      Products.slice(0, 4).map(product => (
        <Card
          imgUrl={product.image}
          title={product.title}
          description={product.description}
          id={product.id}
          price={product.price}
        />
      ))
    }
  </div>

  <div class="flex flex-col items-center justify-center mt-12">
    <h3 class="text-2xl font-bold mb-4 text-center text-white" style="filter: var(--filter-color-6)">
      Want to see more products?
    </h3>
    <a href="/products">
      <button
        class="px-6 py-2 rounded-md bg-[color:var(--color-3)] hover:bg-[color:var(--color-4)] text-white transition duration-200"
        style="filter: var(--filter-color-3)"
      >
        More Products
      </button>
    </a>
  </div>
</div>
