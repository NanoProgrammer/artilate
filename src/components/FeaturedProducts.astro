---
import Card from "./Card.astro";
import {Products} from "../constants/catalog.js"
---

<div class="container mx-auto py-8 lg:max-w-4xl bg-[var(--color-2)]/40">
  <h2 class="text-3xl font-bold mb-4 text-center text-[var(--color-1)]/80">
    Featured Products
  </h2>
  <p class="text-md text-center text-[var(--color-1)]/80 mb-8">
    see the most recent products of our collection
  </p>
  <div class="flex flex-wrap justify-center item-center gap-8">
    <Card

      imgUrl={Products[0].image}
      title={Products[0].title}
      description={Products[0].description}
      id={Products[0].id}
      price={Products[0].price}
    />
    <Card

    imgUrl={Products[1].image}
    title={Products[1].title}
    description={Products[1].description}
    id={Products[1].id}
    price={Products[1].price}
    />
    <Card
    
    imgUrl={Products[2].image}
    title={Products[2].title}
    description={Products[2].description}
    id={Products[2].id}
    price={Products[2].price}
    />
    <Card
  
    imgUrl={Products[3].image}
    title={Products[3].title}
    description={Products[3].description}
    id={Products[3].id}
    price={Products[3].price}
    />
    <div class="flex flex-col items-center justify-center mt-8">
      <h3 class="text-2xl font-bold mb-4 text-center text-[var(--color-1)]">Want to see more products?</h3>
    <a href="/products"><button class="px-4 py-2 ml-4 rounded-md bg-[var(--color-2)]/70 hover:bg-[var(--color-2)]/80 transition-colors ease-in-out duration-200 text-white">More Products</button></a>
    </div>
    
  </div>
</div>
