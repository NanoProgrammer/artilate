---
type Point = { title: string; description: string };
type Props = { title?: string; lead?: string; points?: Point[] };
const {
  title="Our ethics",
  lead="Ethical sourcing, traceability, food safety and low-waste production.",
  points=[
    { title:"Ethical sourcing", description:"Direct relationships with Colombian producers; women-led farms when possible." },
    { title:"Traceability", description:"Documented origin and small-batch controls end-to-end." },
    { title:"Food safety first", description:"Preventive programs, validated processes, third-party testing in Calgary." },
    { title:"Low waste", description:"Recyclable packaging and seasonal planning to reduce excess." },
  ],
} = Astro.props as Props;
---

<section id="ethics" class="ethics">
  <div class="container grid">
    <header class="head">
      <h2 class="h">{title}</h2>
      <p class="lead">{lead}</p>
    </header>
    <div class="body">
      <ul class="list">
        {points.map(p => (
          <li class="item">
            <h3 class="t">{p.title}</h3>
            <p class="d">{p.description}</p>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>

<style>
  .ethics{background:var(--beige);color:var(--cacao);padding:3.5rem 0}
  .grid{display:grid;gap:2rem;grid-template-columns:1fr 2fr}
  @media (max-width:1000px){.grid{grid-template-columns:1fr}}
  .h{font-size:clamp(1.6rem,3.2vw,2.1rem);margin:0 0 .4rem}
  .lead{color:#3b2b24;margin:0}
  .list{margin:0;padding:0;list-style:none;border-top:1px solid rgba(212,163,115,.28)}
  .item{padding:1rem 0;border-bottom:1px solid rgba(212,163,115,.28)}
  .t{margin:0 0 .2rem;font-size:1.05rem}
  .d{margin:0;color:#3b2b24}
</style>
